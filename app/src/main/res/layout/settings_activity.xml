<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolbar"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme"
        app:title="@string/title_activity_settings" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <FrameLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apilayer"
                android:textSize="16sp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://currencylayer.com"
                android:textSize="14sp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:autoLink="web"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fontawesome"
                android:textSize="16sp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=
                    "https://fontawesome.com/icons/ruler-vertical?style=solid\nhttps://fontawesome.com/icons/thermometer-half?style=solid\nhttps://fontawesome.com/icons/weight-hanging?style=solid\nhttps://fontawesome.com/icons/exchange-alt?style=solid\nhttps://fontawesome.com/icons/dollar-sign?style=solid\nhttps://fontawesome.com/license\nCreative Commons Attribution 4.0 International license"
                android:textSize="14sp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:autoLink="web"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>